{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./",
        "esModuleInterop": true,
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@routes/*": ["src/routes/*"],
            "@config/*": ["src/config/*"],
            "@constant/*": ["src/constant/*"],
            "@controllers/*": ["src/controllers/*"],
            "@models/*": ["src/models/*"],
            "@services/*": ["src/services/*"],
            "@types/*": ["src/types/*"]
        }
    }
}
